<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.campus.mapper.EmployeeMapper">

    <select id="selectPage" resultType="com.campus.entity.Employee">
        select * from campus_delivery.employee
        <where>
            <if test="name != null and name !=''">
                name like concat('%',#{name},'%')
            </if>
        </where>
        order by create_time desc
    </select>

    <update id="update" parameterType="com.campus.entity.Employee">
        update campus_delivery.employee
        <set>
            <if test="name!=null and name!=null">name = #{name},</if>
            <if test="username!=null and username!=null">username = #{username},</if>
            <if test="password!=null and password!=null">password = #{password},</if>
            <if test="phone!=null and phone!=null">phone = #{phone},</if>
            <if test="sex!=null and sex!=null">sex = #{sex},</if>
            <if test="idNumber!=null and idNumber!=null">id_number = #{idNumber},</if>
            <if test="status!=null and status!=null">status = #{status},</if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>
</mapper>
